# Production Environment Variables Template
# Copy this file to .env.prod and fill in the actual values

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=production
PORT=3000

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://username:password@postgres:5432/ai_saas_platform
POSTGRES_DB=ai_saas_platform
POSTGRES_USER=ai_saas_user
POSTGRES_PASSWORD=your_secure_postgres_password

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password

# ================================
# JWT AND ENCRYPTION
# ================================
JWT_SECRET=your_extremely_secure_jwt_secret_at_least_32_characters_long
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ================================
# AI SERVICE CONFIGURATION
# ================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Vector Database (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX=ai-saas-vectors

# ================================
# PAYMENT PROCESSING (STRIPE)
# ================================
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Price IDs for Production
STRIPE_BASIC_PRICE_ID=price_live_basic_plan_id
STRIPE_PRO_PRICE_ID=price_live_pro_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_live_enterprise_plan_id

# ================================
# APPLICATION URLS
# ================================
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
PAYMENT_SERVICE_URL=https://payments.yourdomain.com

# ================================
# EMAIL CONFIGURATION
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=noreply@yourdomain.com

# ================================
# MONITORING AND ANALYTICS
# ================================
GRAFANA_PASSWORD=your_secure_grafana_password
PROMETHEUS_RETENTION=30d

# Sentry for Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ================================
# SECURITY CONFIGURATION
# ================================
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_FORMAT=json

# ================================
# FEATURE FLAGS
# ================================
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

# ================================
# ADMIN CONFIGURATION
# ================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================

# AWS Services
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-assets-bucket

# Cloudflare (if using)
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id

# SendGrid (for transactional emails)
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Slack (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# ================================
# PERFORMANCE CONFIGURATION
# ================================
MAX_FILE_SIZE=10485760
REQUEST_TIMEOUT=30000
CACHE_TTL=3600

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Connection Pool
REDIS_POOL_MIN=1
REDIS_POOL_MAX=5